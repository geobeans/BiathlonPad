<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_shooting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="20210205 10:01"
        android:padding="5dp"
        android:textColor="#8f8f8f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_shooting_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="zeroing 3"
        android:padding="5dp"
        android:textColor="#8f8f8f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_shooting_prone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="P"
        android:padding="5dp"
        android:textColor="#8f8f8f"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/item_shooting_zone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="30-26"
        android:padding="5dp"
        android:textColor="#8f8f8f"
        android:textSize="18sp" />

    <cn.geobeans.biathlon.target.SimpleTargetView
        android:id="@+id/item_shooting_target"
        style="@style/Widget.AppTheme.MyView"
        android:layout_width="100dp"
        android:layout_height="100dp"
     />

    <TextView style="@style/view_hor_line" />

</LinearLayout>